<layout version="0.1.0">
    <seqr_payment_index>
        <reference name="head">
            <action method="addJs"><script>seqr/seqr.js</script></action>
            <action method="addCss"><stylesheet>css/seqr/confirm.css</stylesheet></action>
        </reference>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>

        <reference name="content">
            <block type="seqr/payment" name="seqr.payment" template="seqr/payment.phtml"/>
        </reference>
    </seqr_payment_index>
</layout>
